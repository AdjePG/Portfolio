---
import EducationArticle from '@/components/EducationArticle.astro';
import { getTranslations } from '@/i18n/useTranslate';
import Layout from '@/layouts/Layout.astro';

const { currentLocale } = Astro
const language = currentLocale || 'es'
const translations = getTranslations(language)
---

<Layout 
    title={translations["education.page-title"] as string}
	description={translations["education.page-description"] as string}
    language={language}
    translations={translations}
>
    <EducationArticle 
        img=`${import.meta.env.BASE_URL}assets/logos/tokioschool_logo.png`
        institution={translations["education.tokio-school"] as string}
        course={translations["education.tokio-school.course"] as string}
        period={translations["education.tokio-school.period"] as string}
        competencies={translations["education.tokio-school.competencies"] as string[]}
        projects={translations["education.tokio-school.projects"] as string[]}
        className="w-full"
    />

    <EducationArticle 
        img=`${import.meta.env.BASE_URL}assets/logos/uvic_logo.png`
        institution={translations["education.uvic"] as string}
        course={translations["education.uvic.course"] as string}
        period={translations["education.uvic.period"] as string}
        competencies={translations["education.uvic.competencies"] as string[]}
        projects={translations["education.uvic.projects"] as string[]}
        className="w-full mt-10"
    />
</Layout>
