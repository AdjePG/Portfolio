---
import WorkExperienceArticle from '@/components/WorkExperienceArticle.astro';
import { getTranslations } from '@/i18n/useTranslate';
import Layout from '@/layouts/Layout.astro';

const { currentLocale } = Astro
const language = currentLocale || 'es'
const translations = getTranslations(language)
---

<Layout 
    title={translations["work-experience.page-title"] as string}
	description={translations["work-experience.page-description"] as string}
    language={language}
    translations={translations}
>
    <WorkExperienceArticle 
        img=`${import.meta.env.BASE_URL}assets/logos/seidor_logo.png`
        company={translations["work-experience.seidor"] as string}
        role={translations["work-experience.seidor.role"] as string}
        period={translations["work-experience.seidor.period"] as string}
        tasks={translations["work-experience.seidor.tasks"] as string[]}
        training={translations["work-experience.seidor.training"] as string}
        className="w-full"
    />
</Layout>
